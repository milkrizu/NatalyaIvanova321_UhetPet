<Page x:Class="NatalyaIvanova321_UhetPet.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NatalyaIvanova321_UhetPet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Label Content="Авторизация" 
            Style="{StaticResource MyLabelStyle}" 
            Grid.Row="0" 
            Grid.Column="1"
            HorizontalAlignment="Center"/>
            <TextBox x:Name="UsernameTextBox"  Margin="0,0,0,10" Style="{StaticResource MyTextBoxStyle}"/>
            <PasswordBox x:Name="PasswordBox"  Margin="0,0,0,10" Style="{StaticResource MyPasswordBoxStyle}"/>
            <Button Content="Войти" Click="LoginButton_Click" Style="{StaticResource MyButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>
